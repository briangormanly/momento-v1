# Neo4j Connection Configuration
# Copy this file to .env and update with your actual values

# Neo4j Database URI
NEO4J_URI=bolt://localhost:7687

# Neo4j Authentication
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo4j_password
NEO4J_DATABASE=neo4j

# MCP Server Transport Configuration
# Transport mode: stdio, http, or sse
NEO4J_TRANSPORT=stdio

# HTTP/SSE Transport Settings (only used when NEO4J_TRANSPORT is http or sse)
NEO4J_MCP_SERVER_HOST=127.0.0.1
NEO4J_MCP_SERVER_PORT=8000
NEO4J_MCP_SERVER_PATH=/mcp/

# CORS and Security Settings (for HTTP/SSE transport)
NEO4J_MCP_SERVER_ALLOW_ORIGINS=
NEO4J_MCP_SERVER_ALLOWED_HOSTS=localhost,127.0.0.1

# Embedding Configuration
# Embedding mode: local (sentence-transformers), api (OpenAI), or hybrid
EMBEDDING_MODE=local

# Embedding model name
# For local mode: sentence-transformers model name
# For api mode: OpenAI model name (e.g., text-embedding-3-small, text-embedding-3-large)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# OpenAI API Key (required when EMBEDDING_MODE is api or hybrid)
# Get your API key from: https://platform.openai.com/api-keys
EMBEDDING_API_KEY=
